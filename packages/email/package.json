    "@react-email/components": "^1.0.1",
    "consola": "^3.4.2",
    "nodemailer": "^7.0.10",
    "react": "catalog:",
    "react-dom": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@openpaste/logger": "workspace:*",
    "@openpaste/tsconfig": "workspace:*",
    "@react-email/preview-server": "5.0.4",
    "@types/bun": "catalog:",
    "@types/nodemailer": "^7.0.3",
    "@types/react": "catalog:",
    "@types/react-dom": "catalog:",
    "react-email": "^5.0.4",
    "tsdown": "catalog:"
  }
}
