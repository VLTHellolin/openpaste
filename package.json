{
  "name": "@openpaste/monorepo",
  "type": "module",
  "private": true,
  "packageManager": "bun@1.3.2",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "better-auth": "^1.3.34",
      "dotenv": "^17.2.3",
      "react": "^19.2.0",
      "react-dom": "^19.2.0",
      "elysia": "^1.4.16",
      "unocss": "^66.5.6",
      "vite": "^7.2.2",
      "zod": "^4.1.12",
      "tsdown": "^0.16.4",
      "@types/bun": "^1.3.2",
      "@types/react": "^19.2.4",
      "@types/react-dom": "^19.2.3"
    }
  },
  "scripts": {
    "prepare": "husky",
    "lint": "eslint . --cache",
    "lint:fix": "eslint . --fix --cache",
    "dev": "turbo dev",
    "build": "turbo build",
    "db:push": "turbo -F @openpaste/db db:push",
    "db:studio": "turbo -F @openpaste/db db:studio",
    "db:generate": "turbo -F @openpaste/db db:generate",
    "db:migrate": "turbo -F @openpaste/db db:migrate"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@hellolin-eslint/config": "^4.0.1",
    "@hellolin-eslint/node-config": "^4.0.1",
    "@hellolin-eslint/react-config": "^4.0.1",
    "@hellolin-eslint/unocss-config": "^4.0.1",
    "eslint": "^9.39.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "turbo": "^2.6.1",
    "typescript": "^5.9.3",
    "unocss": "catalog:"
  },
  "overrides": {
    "zod-validation-error": ">=5.0.0"
  }
}
